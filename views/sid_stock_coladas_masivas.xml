<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sid_form_input_coladas_masivo" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.sid_input_coladas_masivo</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="before">
                    <group string="Importar coladas masivas">
                        <field name="sid_has_coladas" invisible="1"/>
                        <button name="action_descargar_plantilla_coladas"
                                type="object"
                                string="Descargar plantilla coladas"
                                class="oe_highlight"
                                icon="fa-download"/>
                        <button name="action_ir_importar_coladas"
                                type="object"
                                string="Ir a importar pickings"
                                class="btn-secondary"
                                icon="fa-upload"/>
                        <button name="action_procesar_coladas"
                                type="object"
                                string="Procesar coladas"
                                class="btn-primary"
                                icon="fa-cogs"
                                attrs="{'invisible': [('sid_has_coladas', '=', False)]}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
